<table>
<thead>
<tr>
<th>Term</th>
<th>Pronunciation</th>
<th>Origin</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @words.each do |word| %>
<tr>
<td><%= word.term %></td>
<td><%= word.pronunciation %></td>
<td><%= word.origin %></td>
<td><%= link_to 'Show', word %></td>
<td><%= link_to 'Edit', edit_word_path(word) %></td>
<td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<td><%= image_tag word.image.url(:thumb), :alt => "" %></td>
</tr>
<% end %>
</tbody>
</table>
